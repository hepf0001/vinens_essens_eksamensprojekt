---
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
---

<div x-data="{ showmenu: false }" class="fixed z-[100] items-center w-full bg-[#000000] bg-opacity-65 md:bg-transparent backdrop-blur-sm">
  <!-- brug "fixed" for at have den pÃ¥ siden hele vejen ned -->
  <div id="navbar" class="relative max-w-7xl mx-auto z-[50]">
    <div class="flex items-center justify-center md:grid md:grid-cols-12 gap-6 py-4 px-6">
      <!-- Burger Menu -->
      <button id="burgermenu" class="col-span-2 lg:hidden p-8" x-on:click="showmenu = !showmenu">
        <!-- Menu icon (Hamburger) -->
        <svg
          x-show="!showmenu"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-9 text-neutral-50 hover:text-red-800 transition duration-300 ease-in-out"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5M12 17.25h8.25"></path>
        </svg>
        <!-- Close icon (Cross) -->
        <svg
          x-show="showmenu"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="size-9 text-neutral-50 hover:text-red-800 transition duration-300 ease-in-out"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Desktop Menu -->
      <nav id="desktopmenu" class="hidden lg:flex col-span-8 items-center justify-between bg-white shadow z-[20]">
        <!-- Left Section: Links -->
        <ul class="some1 list-none flex gap-12">
          <li>
            <a href="/" class="text-neutral-50 py-2 hover:opacity-70">Hjem</a>
          </li>
          <li>
            <a href="/om" class="text-neutral-50 py-2 hover:opacity-70">Om os</a>
          </li>
        </ul>

        <!-- Center Section: Logo -->
        <div class="flex justify-center">
          <a href="/">
            <img
              src="/Logo_hvid.svg"
              alt="Logo for Vinens Essens"
              class="h-20 transition duration-300 ease-in-out transform hover:-translate-y-[3px] hover:opacity-70"
            />
          </a>
        </div>

        <!-- Right Section: Links and Button -->
        <div class="flex items-center gap-12">
          <ul class="some1 list-none">
            <li>
              <a href="/listeview" class="text-neutral-50 py-2 hover:opacity-70"> Vinkasser </a>
            </li>
          </ul>
          <a href="/formular_vinkasse">
            <Button variant="primary" size="small">Bestil abonnement</Button>
          </a>
        </div>
      </nav>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav
    id="mobilmenu"
    class="flex flex-col items-end text-right pt-4"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul class="some1 list-none pt-8 px-8">
      <li><a href="/" class="text-neutral-50 py-2 hover:opacity-70">Hjem</a></li>
      <hr class="border-t-2 my-6 w-28 border-neutral-50" />
      <li><a href="/om" class="text-neutral-50 py-2 hover:opacity-70">Om os</a></li>
      <hr class="border-t-2 my-6 w-28 border-neutral-50" />
      <li><a href="/listeview" class="text-neutral-50 py-2 hover:opacity-70">Vinkasser</a></li>
      <hr class="border-t-2 my-6 w-28 border-neutral-50" />
    </ul>
    <a href="/formular_vinkasse" class="mt-12 mb-4 px-8">
      <Button variant="primary" size="small">Bestil abonnement</Button>
    </a>
  </nav>
</div>

<style>
  /*Link-hover effect*/
  .some1 a {
    position: relative;
    line-height: 1.75rem /* 28px */;
  }

  .some1 a::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    border-radius: 4px;
    background-color: #c60e18;
    bottom: 0;
    left: 0;
    transform-origin: right;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out;
  }

  .some1 a:hover::before {
    transform-origin: left;
    transform: scaleX(1);
  }
</style>
