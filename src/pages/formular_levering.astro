                        <span class="bg-red-800 h-3"></span>
                        <span class="bg-red-800 h-3"></span>
                        <span class="bg-red-800 h-3"></span>
                        <span class="bg-neutral-50 h-3"></span>
                        <span class="bg-neutral-50 h-3"></span>
                    </section>
                    <section class="md:p-12 p-8">
                        <section class="flex">
                            <a class="pr-5" href="/formular_oplysninger"><img src="/tilbage.svg" alt="Tilbageknap" /></a>
                            <div>
                                <h1 class="md:text-h2-desktop text-h2-mobile font-display font-regular pb-10">Levering</h1>
                            </div>
                        </section>

                        <!------------------------------- Tabbed interface ------------------------------->
                        <section class="col-span-6 col-start-2">
                            <div class="tab-section bg-neutral-50">
                                <div class="flex flex-wrap">
                                    <button class="bg-neutral-50 hover:bg-neutral-200 p-3 text-neutral-50 flex-grow" data-tab-target="#tab1">Afhentning i pakkeshop</button>
                                    <button class="bg-neutral-50 hover:bg-neutral-200 p-3 text-neutral-950 flex-grow" data-tab-target="#tab2">Levering til døren</button>
                                </div>
                                <div id="tab1" class="tab-content">
                                    <!------ Sektion 1 ------>
                                    <section class="border-red-800 border-2 p-8 grid grid-cols-6 gap-gap">
